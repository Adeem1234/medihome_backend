<head>
	<title>Register</title>
</head>
<div class="row mt-5 w-100">
	<div class="col-md-4 m-auto">
		<div class="card card-body">
			<img src="/img/logo.png" alt="logo" />
			<%- include('partials/messages'); %>
			<form action="/admin/register" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
						value="<%= typeof name != 'undefined' ? name : '' %>" />
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
						value="<%= typeof email != 'undefined' ? email : '' %>" />
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" class="form-control"
						placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label>
					<input type="password" id="password2" name="password2" class="form-control"
						placeholder="Confirm Password"
						value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
				</div>
				<button type="submit" class="btn btn-primary btn-block mb-3">
					Register
				</button>
			</form>
			<div class="d-flex justify-content-center align-items-center">
				<span>Have An Account</span>
				<a href="/admin/login" class="btn btn-primary btn-block w-25 float-right p-0 w-0"><span class="p-0 w-0">
						Login</span></a>
			</div>
			<!-- <span class="lead mt-2">Have An Account? <a href="/admin/login">Login</a></span> -->
		</div>
	</div>
</div>