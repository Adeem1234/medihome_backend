<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/pharmacistDashboardSideBar.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>
          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <!-- DataTable -->
            <div class="card shadow mb-4">
              <div class="card-header py-3 bg-gradient-primary">
                <h6 class="m-0 font-weight-bold text-light">
                  Medicines
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th class="w-100 text-align-center">
                          Name
                        </th>
                        <th class="w-100 text-align-center">
                          formula
                        </th>
                        <th class="w-100 text-align-center">
                          manufacturer
                        </th>
                        <th class="w-100 text-align-center">
                          price
                        </th>
                        <th class="w-50 align-content-center px-4">
                          Actions
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (var medicine of medicines){ %>
                        <tr>
                          <td>
                            <%=medicine.name%>
                          </td>
                          <td>
                            <%=medicine.formula%>
                          </td>
                          <td>
                            <%=medicine.manufacturer%>
                          </td>
                          <td>
                            <%=medicine.price%>
                          </td>
                          <td class="align-content-center">
                            <a href="/admin/medicine/edit/<%=medicine._id%>">
                              <button class="btn btn-sm btn-warning">
                                <i class="far fa-edit"></i>
                              </button>
                            </a>
                            <a href="/admin/medicine/delete/<%=medicine._id%>">
                              <button class="btn btn-sm btn-danger">
                                <i class="far fa-trash-alt"></i>
                              </button>
                            </a>
                          </td>
                        </tr>
                        <%}%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

        <!-- End of Footer -->
    </div>
</div>
<% include('./partials/Logout.ejs')%>