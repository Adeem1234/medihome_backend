<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/dashboardNavSide.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>

          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <form action="/admin/users/new" method="POST">
              <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                  <h6 class="m-0 font-weight-bold text-light">
                    Add new User
                  </h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <div class="d-flex align-items-center" autocomplete="off">
                      <span class="text-nowrap mr-1">User Name: </span>
                      <input autocomplete="false" type="text" name="name"
                        class="form-control border border-secondary w-100 m-1" placeholder="Enter Name" />
                    </div>
                    <div class="d-flex align-items-center" autocomplete="off">
                      <span class="text-nowrap mr-1">Email: </span>
                      <input autocomplete="false" type="email" name="email"
                        class="form-control border border-secondary w-100 m-1" placeholder="Enter Email" />
                    </div>
                    <div class="d-flex align-items-center" autocomplete="off">
                      <span class="text-nowrap mr-1">Password: </span>
                      <input autocomplete="false" type="password" name="password"
                        class="form-control border border-secondary w-100 m-1" placeholder="Enter password" />
                    </div>
                    <div class="d-flex align-items-center" autocomplete="off">
                      <span class="text-nowrap mr-1">Phone No: </span>
                      <input autocomplete="false" type="text" name="phoneNo"
                        class="form-control border border-secondary w-100 m-1"
                        placeholder="Enter phone No   ex: +923123456789" />
                    </div>
                    <div class="d-flex mt-1 mb-2 ml-1 mr-1">
                      <span class="text-nowrap mr-1">City: </span>
                      <select name="city" id="selectCity" aria-placeholder="Select City"
                        class="form-control select2 select2-selection select2-lg select2-selection w-100">
                        <option></option>
                        <%for (var city of cities) {%>
                          <option value=<%=city._id%>><%= city.name%>
                          </option>
                          <% } %>
                      </select>
                    </div>
                    <div class="d-flex my-2 ml-1 mr-1">
                      <span class="text-nowrap mr-1">Area: </span>
                      <select name='area' id='selectArea'
                        class="form-control select2 select2-selection select2-lg select2-selection w-100"></select>
                    </div>
                  </div>
                  <div class="d-flex mt-1 mb-2 ml-1 mr-1">
                    <span class="text-nowrap mr-1">Select Type: </span>

                    <select name="type" id="selectType"
                      class="form-control select2 select2-selection select2-lg select2-selection w-100">
                      <option selected value="Pharmacist">Pharmacist</option>
                      <option value="laboratorist">laboratorist</option>
                    </select>
                  </div>
                </div>
                <div class="card-footer">
                  <button class="btn bg-danger text-white px-3 py-2 float-right" type="submit">
                    <span> Add </span>
                  </button>
                </div>
              </div>
            </form>
            <!-- <h5 class="mt-4"> Projects</h5> -->

            <!-- /.container-fluid -->
            <!-- End of Main Content -->
          </div>
      </div>
      <div>
        <!-- Footer -->
        <%- include('./partials/footer.ejs') %>

          <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('./partials/logoutModel.ejs') %>