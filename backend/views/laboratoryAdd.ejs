<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/dashboardNavSide.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>

          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <form action="/admin/laboratory/add" method="POST">
              <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                  <h6 class="m-0 font-weight-bold text-light">
                    Add new Laboratory
                  </h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <div class="d-flex align-items-center">
                      <span class="text-nowrap mr-1">Laboratory Name: </span>
                      <input type="text" name="name" class="form-control border border-secondary w-100 m-1"
                        placeholder="Enter Name" />
                    </div>
                    <div class="d-flex mt-1 mb-2 ml-1 mr-1">
                      <span class="text-nowrap mr-1">Select City: </span>
                      <select name="city" id="selectCity" aria-placeholder="Select City"
                        class="form-control select2 select2-selection select2-lg select2-selection w-100">
                        <%for (var city of cities) {%>
                          <option value=<%=city._id%>><%= city.name%>
                          </option>
                          <% } %>
                      </select>
                    </div>
                    <div class="d-flex mt-1 mb-2 ml-1 mr-1">
                      <span class="text-nowrap mr-1">Select Manager: </span>

                      <select name="manager" id="selectManager"
                        class="form-control select2 select2-selection select2-lg select2-selection w-100">
                        <% if(users){for (var user of users) {%>
                          <option value=<%=user._id%>><%= user.name%>
                          </option>
                          <% }} %>

                      </select>
                    </div>
                  </div>
                  <div class="card-footer">
                    <button class="btn bg-danger text-white px-3 py-2 float-right" type="submit">
                      <span> Add </span>
                    </button>
                  </div>
                </div>
            </form>
            <!-- <h5 class="mt-4"> Projects</h5> -->

            <!-- /.container-fluid -->
            <!-- End of Main Content -->
          </div>
      </div>
    </div>
    <div>
      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('./partials/logoutModel.ejs') %>