<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/pharmacistDashboardSideBar.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>
          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid px-2">
            <!-- Page Heading -->
            <form action="/admin/pharmacy/add/medicine" method="POST">
              <div class="card shadow mb-4 ">
                <div class="card-header py-3 bg-gradient-primary">
                  <h6 class="m-0 font-weight-bold text-light">
                    UPDATE STOCK
                  </h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <div class="d-flex mt-1 mb-2 ml-1 mr-1">
                      <span class="text-nowrap mr-1">Select Medicine: </span>
                      <select name="medicine" id="selectMedicine" aria-placeholder="Select Medicine"
                        class="form-control select2 select2-selection select2-lg select2-selection w-100">
                        <option></option>
                        <%for (var medicine of medicines) {%>
                          <option value=<%=medicine._id%>><%= medicine.name%>
                          </option>
                          <% } %>
                      </select>
                    </div>
                    <div class="d-flex align-items-center">
                      <span class="text-nowrap mr-1">Quantity: </span>
                      <input type="number" name="quantity" class="form-control border border-secondary w-100 m-1"
                        placeholder="Enter Quantity" />
                    </div>
                  </div>
                  <div class="card-footer d-flex flex-column flex-column-reverse">
                    <button class="btn bg-danger text-white px-3  float-right" type="submit">
                      <span> Add </span>
                    </button>
                  </div>
                </div>
            </form>
          </div>
          <div class="container-fluid">

            <!-- DataTable -->
            <div class="card shadow w-100">
              <div class="card-header py-3 bg-gradient-primary">
                <h6 class="m-0 font-weight-bold text-light">
                  Pharmacies Medicines
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th class="w-auto text-align-center">
                          Name
                        </th>
                        <th class="w-auto text-align-center">
                          City
                        </th>
                        <th class="w-auto text-align-center">
                          Area
                        </th>
                        <th class="w-auto text-align-center">
                          Manager
                        </th>
                        <th class="w-auto align-content-center px-4">
                          Actions
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <td>
                        <%=pharmacy%>
                      </td>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

        <!-- End of Footer -->
    </div>
</div>
<% include('./partials/Logout.ejs')%>