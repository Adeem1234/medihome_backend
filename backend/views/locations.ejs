<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/dashboardNavSide.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>
          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <!-- DataTable -->
            <div class="card shadow mb-4">
              <div class="card-header py-3 bg-gradient-primary">
                <h6 class="m-0 font-weight-bold text-light">
                  Locations
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th class="w-50 text-align-center">
                          City
                        </th>
                        <th class="w-75 text-align-center">
                          Areas
                        </th>
                        <th class="w-25 align-content-center px-4">
                          Actions
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (var city of cities){ %>
                        <tr>
                          <td>
                            <%=city.name%>
                          </td>
                          <td class="p-0 ">
                            <table class="table table-bordered table-responsive" id="datatable" width="100%"
                              cellspacing="0">
                              <thead>
                                <tr>
                                  <th class="w-100 text-align-center">
                                    Name
                                  </th>
                                  <th class="w-50 align-content-center px-4">
                                    Actions
                                  </th>
                                </tr>
                              </thead>
                              <tbody>
                                <% for (var area of city.areas){ %>

                                  <tr>
                                    <td>
                                      <%= area.name%>
                                    </td>
                                    <td class="align-content-center">
                                      <a href="/admin/area/edit/<%=area._id%>">
                                        <button class="btn btn-sm btn-warning">
                                          <i class="far fa-edit"></i>
                                        </button>
                                      </a>
                                      <a href="/admin/area/remove/<%=city._id%>/<%=area._id%>">
                                        <button class="btn btn-sm btn-danger">
                                          <i class="far fa-trash-alt"></i>
                                        </button>
                                      </a>
                                    </td>
                                  </tr>
                                  <% } %>
                              </tbody>
                            </table>
                          </td>
                          <td class="align-content-center">
                            <a href="/admin/city/edit/<%=city._id%>">
                              <button class="btn btn-sm btn-warning">
                                <i class="far fa-edit"></i>
                              </button>
                            </a>
                            <a href="/admin/city/delete/<%=city._id%>">
                              <button class="btn btn-sm btn-danger">
                                <i class="far fa-trash-alt"></i>
                              </button>
                            </a>
                          </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

        <!-- End of Footer -->
    </div>
</div>
<% include('./partials/Logout.ejs')%>