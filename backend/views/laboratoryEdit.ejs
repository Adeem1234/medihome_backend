<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/dashboardNavSide.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>

          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <form action="/admin/laboratory/edit/<%=laboratory._id%>" method="POST">
              <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                  <h6 class="m-0 font-weight-bold text-light">
                    Update laboratory
                  </h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <div class="d-flex align-items-center">
                      <input type="text" name="name" class="form-control border border-secondary w-100 m-1"
                        placeholder="<%=laboratory.name%>" />
                      <input type="text" name="location" class="form-control border border-secondary w-100 m-1"
                        placeholder="<%=laboratory.location%>" />
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button class="btn bg-danger text-white px-3 py-2 float-right" type="submit">
                    <span> Update </span>
                  </button>
                </div>
              </div>
            </form>
            <!-- <h5 class="mt-4"> Projects</h5> -->

            <!-- /.container-fluid -->
            <!-- End of Main Content -->
          </div>
      </div>
      <div>
        <!-- Footer -->
        <%- include('./partials/footer.ejs') %>

          <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

