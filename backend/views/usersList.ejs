<!-- Page Wrapper -->
<div id="wrapper" class="w-auto">
  <!-- Sidebar -->
  <%- include('./partials/dashboardNavSide.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include('./partials/Logout.ejs') %>
          <!-- End of Topbar -->
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <!-- DataTable -->
            <div class="card shadow mb-4">
              <div class="card-header py-3 bg-gradient-primary">
                <h6 class="m-0 font-weight-bold text-light p-0 m-0 "> All Users </h6>
                <a href="/users/new">
                  <button class="btn btn-sm bg-danger py-0 m-0">
                    <span class="text-light font-italic">
                      Add New User
                    </span>
                  </button>
                </a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th class="w-auto text-align-center">
                          Name
                        </th>
                        <th class="w-auto text-align-center">
                          Email
                        </th>
                        <th class="w-auto text-align-center">
                          Type
                        </th>
                        <th class="w-auto text-align-center">
                          City
                        </th>
                        <th class="w-auto text-align-center">
                          Area
                        </th>
                        <th class="w-auto align-content-center px-4">
                          Actions
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (var user of users){ %>
                        <tr>
                          <td>
                            <% if(user.name){%>
                              <%=user.name%>
                                <%}%>
                          </td>
                          <td>
                            <% if(user.email){%>
                              <%=user.email%>
                                <%}%>
                          </td>
                          <td>
                            <% if(user.type){%>
                              <%=user.type%>
                                <%}%>
                          </td>
                          <td>
                            <% if(user.city){%>
                              <%=user.city.name%>
                                <%}%>
                          </td>
                          <td>
                            <% if(user.area){%>
                              <%=user.area.name%>
                                <%}%>
                          </td>
                          <td class="align-content-center">
                            <a href="/admin/users/edit/<%=user._id%>">
                              <button class="btn btn-sm btn-warning">
                                <i class="far fa-edit"></i>
                              </button>
                            </a>
                            <a href="/admin/users/delete/<%=user._id%>">
                              <button class="btn btn-sm btn-danger">
                                <i class="far fa-trash-alt"></i>
                              </button>
                            </a>
                          </td>
                        </tr>
                        <%}%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

        <!-- End of Footer -->
    </div>
</div>
<% include('./partials/Logout.ejs')%>