<div id="wrapper" class='w-auto'>
  <!-- SideBar -->
  <%- include('./partials/pharmacistDashboardSideBar.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('./partials/Logout.ejs') %>
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">
              <!-- Page Heading -->
              <div class="row d-flex justify-content-around mb-3">
                <!-- Users Registered List Card Example -->
                <div class="col-xl-3  col-md-2 mb-1">
                  <div class="card border-left-primary shadow h-100 w-auto py-1">
                    <div class="card-body">
                      <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                          <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Orders Today</div>
                          <div class=" h5 mb-0 font-weight-bold text-gray-800">
                            <%= ordersToday%>
                          </div>
                        </div>
                        <div class="col-auto">
                          <i class="fas fa-users fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Surveys Total Card Example -->
                <div class="col-xl-3 col-md-2 mb-1">
                  <div class="card border-left-info shadow h-100 w-auto py-1">
                    <div class="card-body">
                      <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                          <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Pending Orders
                          </div>
                          <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%=pendingOrders%>
                          </div>
                        </div>

                        <div class="col-auto ">
                          <i class="fas fa-prescription-bottle"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-2 mb-1">
                  <div class="card border-left-warning shadow h-100 w-auto py-1">
                    <div class="card-body">
                      <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                          <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Total Orders
                          </div>
                          <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= orders.length%>
                          </div>
                        </div>
                        <div class="col-auto">
                          <i class="fas fa-diagnoses fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                  <h6 class="m-0 font-weight-bold text-light"> All Orders </h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th class=" text-align-center"> Customer </th>
                          <th class=" text-align-center"> City </th>
                          <th class=" text-align-center"> Area </th>
                          <th class=" text-align-center"> Date </th>
                          <th class=" text-align-center"> Total </th>
                          <th class=" text-align-center"> Status </th>
                          <th class="w-0 align-content-center"> Actions </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var order of orders){ %>
                          <tr>
                            <td>
                              <%=order.name%>
                            </td>
                            <td>
                              <%=order.email%>
                            </td>
                            <td>
                              <%=order.type%>
                            </td>
                            <td>
                              <%=order.date%>
                            </td>
                            <td>
                              <%=order.total%>
                            </td>
                            <td>
                              <%=order.status%>
                            </td>
                            <td>
                              <a href="/admin/orders/status/processing/<%=order._id%>">
                                <button class="btn btn-sm btn-danger">
                                  <i class="far fa-trash-alt"></i>
                                </button>
                              </a><a href="/admin/orders/status/completed/<%=order._id%>">
                                <button class="btn btn-sm btn-danger">
                                  <i class="far fa-trash-alt"></i>
                                </button>
                              </a>
                            </td>
                          </tr>
                          <%}%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <!-- /.container-fluid -->
            </div>
            <!-- End of Content Wrapper -->
        </div>
      </div>
      <%- include('./partials/footer.ejs') %>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up">UP</i>
    </a>
</div>
<!-- Scroll to Top Button-->

<!-- Logout Modal-->
<%- include('./partials/logoutModel.ejs') %>