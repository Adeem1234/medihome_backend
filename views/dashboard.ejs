<head>
	<title>Dashboard</title>
</head>
<div id="wrapper" class='w-auto'>
	<!-- SideBar -->
	<%- include('./partials/dashboardNavSide.ejs') %>
		<!-- End of Sidebar -->
		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">
			<!-- Main Content -->
			<div id="content">
				<!-- Main Content -->
				<div id="content">
					<!-- Topbar -->
					<%- include('./partials/Logout.ejs') %>
						<!-- End of Topbar -->
						<!-- Begin Page Content -->
						<div class="container-fluid">
							<!-- Page Heading -->
							<div class="row d-flex justify-content-around mb-3">
								<!-- Users Registered List Card Example -->
								<div class="col-xl-3  col-md-2 mb-1">
									<div class="card border-left-primary shadow h-100 w-auto py-1">
										<div class="card-body">
											<div class="row no-gutters align-items-center">
												<div class="col mr-2">
													<div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
														Users</div>
													<div class=" h5 mb-0 font-weight-bold text-gray-800">
														<%= usersCount%>
													</div>
												</div>
												<div class="col-auto">
													<i class="fas fa-users fa-2x"></i>
												</div>
											</div>
										</div>
									</div>
								</div>
								<!-- Surveys Total Card Example -->
								<div class="col-xl-3 col-md-2 mb-1">
									<div class="card border-left-info shadow h-100 w-auto py-1">
										<div class="card-body">
											<div class="row no-gutters align-items-center">
												<div class="col mr-2">
													<div class="text-xs font-weight-bold text-info text-uppercase mb-1">
														Pharmacies
													</div>
													<div class="h5 mb-0 font-weight-bold text-gray-800">
														<%=bannedUsers%>
													</div>
												</div>

												<div class="col-auto ">
													<i class="fas fa-prescription-bottle"></i>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-xl-3 col-md-2 mb-1">
									<div class="card border-left-warning shadow h-100 w-auto py-1">
										<div class="card-body">
											<div class="row no-gutters align-items-center">
												<div class="col mr-2">
													<div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
														Laboratories
													</div>
													<div class="h5 mb-0 font-weight-bold text-gray-800">
														<%= callsToday%>
													</div>
												</div>
												<div class="col-auto">
													<i class="fas fa-diagnoses fa-2x"></i>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="card shadow mb-4">
								<div class="card-header py-3 bg-gradient-primary">
									<h6 class="m-0 font-weight-bold text-light"> All Users </h6>
								</div>
								<div class="card-body">
									<div class="table-responsive">
										<table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
											<thead>
												<tr>
													<th class="w-0	 ">Profile Image</th>
													<th class=" text-align-center"> User Name </th>
													<th class=" text-align-center"> Name </th>
													<th class=" text-align-center"> Banned </th>
													<th class="w-0 align-content-center"> Actions </th>
												</tr>
											</thead>
											<tbody>
												<% for (var user of users){ %>
													<tr>
														<% if(user.avatar){%>
															<td class="py-0 d-flex  justify-content-center ">
																<img class="m-1" id='profileImage' alt="" height="50" width='50' src=<%=user.avatar%> />
															</td>
															<%}else{%>
																<td></td>
																<%}%>
																	<td>
																		<%=user.userName%>
																	</td>
																	<td>
																		<%=user.name%>
																	</td>
																	<td>
																		<%=user.is_banned%>
																	</td>
																	<td class="align-content-center">
																		<a href="/admin/user/profile/<%=user._id%>">
																			<button class="btn btn-sm btn-info">
																				<i class="fas fa-id-badge w-100"></i>
																			</button>
																		</a>
																		<% if(user.is_banned){%>
																			<a href="/admin/users/report/<%=user._id%>">
																				<button class="btn btn-sm btn-primary">
																					<i class="fas fa-lock"></i>
																				</button>
																			</a>
																			<% } else {%>
																				<a href="/admin/users/report/<%=user._id%>">
																					<button class="btn btn-sm btn-primary">
																						<i class="fas fa-unlock-alt"></i>
																					</button>
																				</a>
																				<%}%>
																					<a href="/admin/users/delete/<%=user._id%>">
																						<button class="btn btn-sm btn-danger">
																							<i class="far fa-trash-alt"></i>
																						</button>
																					</a>
																	</td>
													</tr>
													<%}%>
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<!-- /.container-fluid -->
						</div>
						<!-- End of Content Wrapper -->
				</div>
			</div>
			<%- include('./partials/footer.ejs') %>
		</div>
		<a class="scroll-to-top rounded" href="#page-top">
			<i class="fas fa-angle-up">UP</i>
		</a>
</div>
<!-- Scroll to Top Button-->

<!-- Logout Modal-->
<%- include('./partials/logoutModel.ejs') %>
